    void selectiom_sort(int a[], int n)
    {
    int min, i,j,temp;
    for(i=1;i<=n-1;i++)
    {
        min=i;
        for(j=1;i<=n;j++)
        {
            if(a[j]<a[min])
            {
                min=j;
            }
        }
        if(min!=i)
        {
            temp= a[min];
            a[min]=a[i];
            a[i]=temp;
